#include <stdio.h>
#include <stdlib.h>
 int main(void){
 	int numero,i,d;
	 int fact=1,fac; 
	 while (d>1){
 	printf("factorial de un numero \n");
 	printf("indica un numero: \n");
 	scanf("%d", &numero);
 	for (i=1; i<=numero; i++){
 		fact=fact*i;
 	}
 	printf ("factorial de %d es: %d\n", numero, fact);
 	printf ("deseas hacer el calculo de nuevo 1)no 2)si \n");
 	scanf("%d", &d);
 	
	 }
	 printf ("Gracias por su preferencia");
}
